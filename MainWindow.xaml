<Window x:Class="Coursework_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="720">
    <Window.Resources>
        <local:ColourCodeConverter x:Key="CCConverter" />
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>


            <Button Name="Column1" Click="Column1_Click" Grid.Column="1" Grid.Row="0" Background="{x:Null}" BorderBrush="{x:Null}">
                <Ellipse Width="40" Height="40" Fill="{Binding Game.board.locations[0,0].Number, Converter={StaticResource CCConverter}}"></Ellipse>
            </Button>
            <TextBox Text="Place Counter" Grid.Column="1" Grid.Row="0" Background="{x:Null}" BorderBrush="{x:Null}" ></TextBox>



        </Grid>
    </Grid>
</Window>
